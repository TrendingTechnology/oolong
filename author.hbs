{{!< default}}

{{#author}}
  <section class="hero is-light">
    {{> header}}

    <div class="hero-body">
      <div class="container">
        <div class="columns is-vcentered">
          <div class="column is-half is-offset-one-quarter">
            <div class="columns is-mobile">
              <div class="column">
                <h1 class="title is-2">{{name}}</h1>
                {{#if bio}}<p class="subtitle is-5">{{bio}}</p>{{/if}}
                <a class="button is-primary" href="{{url}}rss/">
                  <span class="icon"><i class="fa fa-rss"></i></span>
                  <span>Subscribe</span>
                </a>
                {{#if facebook}}
                  <a class="button is-primary" href="{{facebook_url facebook}}">
                    <span class="icon"><i class="fa fa-facebook"></i></span>
                    <span>Facebook</span>
                  </a>
                {{/if}}
                {{#if twitter}}
                  <a class="button is-primary" href="{{twitter_url twitter}}">
                    <span class="icon"><i class="fa fa-twitter"></i></span>
                    <span>Twitter</span>
                  </a>
                {{/if}}
              </div>

              {{#if image}}
                <div class="column is-narrow">
                  <figure class="image is-96x96 is-rounded"><img src="{{image}}"></figure>
                </div>
              {{/if}}
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
{{/author}}

